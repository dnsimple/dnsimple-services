{
  "config": {
    "name": "github-pages",
    "label": "GitHub Pages",
    "description": "Publish static pages for you and your projects by pushing files to a GitHub repository."
  },

  "fields": [
    {
      "name": "github_domain",
      "label": "Github Domain",
      "description": "Enter your github.io domain"
    }
  ],

  "records": [
    {
      "type": "ALIAS",
      "name": "",
      "content": "{{github_domain}}",
      "ttl": 3600
    },
    {
      "type": "CNAME",
      "name": "www",
      "content": "{{domain}}",
      "ttl": 3600
    }
  ]
}
